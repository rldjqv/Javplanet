<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.javplanet.api.board.dao.BoardDao">

	<sql id="conditions">
		<!-- <if test="data.app_seq != null and data.app_seq != ''">
			AND master.tn_appinfo.app_seq = #{data.data.app_seq}			
		</if> -->		
	</sql>
	
	<select id="getBoards" parameterType="kr.co.javplanet.api.board.model.BoardParam" resultType="kr.co.javplanet.api.board.dto.Board">
		SELECT /* board.xml : getBoards */
			adminNo,
			memNo,
			boardType,
			title,
			viewCount,
			up,
			delYN,
			DATE_FORMAT(regDate, '%Y-%m-%d') as regDate
		FROM jav_board
		WHERE 1=1
		ORDER BY seq DESC
		<include refid="conditions"/>
	</select>
	
</mapper>